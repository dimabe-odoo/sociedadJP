<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_view_picking_form_inherit" model="ir.ui.view">
            <field name="name">Stock Picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="show_supply" invisible="1" groups="base.group_no_one"/>
                    <field name="supply_dispatch_id" attrs="{'invisible':[('show_supply','=',False)]}"
                           widget="many2onebutton"/>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="purchase_without_supply"
                           attrs="{'invisible':[('picking_type_code','in',('internal','outgoing'),('supply_dispatch_id','=',None))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>