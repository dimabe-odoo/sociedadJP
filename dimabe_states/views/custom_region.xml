<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_region_form_view" model="ir.ui.view">
            <field name="name">Formulario de Regiones</field>
            <field name="model">custom.region</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="get_regions" string="Obtener regiones"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Region"/>
                            </h1>
                        </div>
                        <group>
                            <field name="country_id"/>
                            <field name="code"/>
                            <field name="geo_latitude"/>
                            <field name="geo_longitude"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="custom_region_tree_view" model="ir.ui.view">
            <field name="name">Listado de Regiones</field>
            <field name="model">custom.region</field>
            <field name="arch" type="xml">
                <tree string="Regiones">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="custom_region_act_window" model="ir.actions.act_window">
            <field name="name">Regiones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.region</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Regiones" id="custom_region_menu_item" parent="contacts.menu_localisation"
                  action="custom_region_act_window"/>

    </data>
</odoo>