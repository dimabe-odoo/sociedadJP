<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_data_tree_view" model="ir.ui.view">
            <field name="name">custom_data.tree</field>
            <field name="model">custom.data</field>
            <field name="arch" type="xml">
                <tree delete="false" editable="bottom" create="false">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="data_type_id"/>
                </tree>
            </field>
        </record>


        <record id="custom_data_act_window" model="ir.actions.act_window">
            <field name="name">Tramos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Tramos" id="custom_menu" parent="hr_payroll.menu_payroll_configuration"
                  action="custom_data_act_window"/>

    </data>
</odoo>