<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_loan_form" model="ir.ui.view">
            <field name="name">custom_loan.form</field>
            <field name="model">custom.loan</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="button_confirm" string="Confirmar"
                                attrs="{'invisible': [('state','!=','draft')]}"/>
                        <button type="object" name="recalculate_loan" string="Recalcular"
                                attrs="{'invisible': [('state','!=','draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" text="Pagado" attrs="{'invisible': [('state','!=','done')]}"/>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type_of_loan" attrs="{'invisible': [('state','!=','draft')]}"/>
                                <field name="fee_qty" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="fee_value" required="1"
                                       attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="next_fee_date"/>
                                <field name="loan_total"
                                       readonly="1"/>
                            </group>
                            <group>
                                <field name="rule_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date_start_old" string="Fecha de Primer Pago"
                                       attrs="{'invisible': [('type_of_loan','=','new')],'required':[('type_of_loan','=','in_progress')],'readonly':[('state','!=','draft')]}"/>
                                <field name="date_start" string="Fecha de Ingreso"
                                       attrs="{'invisible': [('type_of_loan','=','new')]}"/>
                                <field name="date_start" string="Fecha de Primer Pago"
                                       attrs="{'invisible': [('type_of_loan','!=','new')],'readonly': [('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cuotas" name="fee">
                                <group>
                                    <field name="fee_remaining" attrs="{'invisible':[('state','=','draft')]}"
                                           readonly="1"/>
                                </group>
                                <field name="fee_ids">
                                    <tree create="false" editable="bottom" delete="false">
                                        <field name="paid" readonly="1"/>
                                        <field name="number" readonly="1"/>
                                        <field name="expiration_date" readonly="1"/>
                                        <field name="value" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="custom_loan_tree_view" model="ir.ui.view">
            <field name="name">custom_loan_tree_view</field>
            <field name="model">custom.loan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" widget="many2onebutton"/>
                    <field name="fee_qty"/>
                </tree>
            </field>
        </record>


        <record id="custom_loan_act_window" model="ir.actions.act_window">
            <field name="name">Prestamos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.loan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Prestamos" id="custom_loan_menu" parent="hr_work_entry_contract.menu_hr_payroll_root"
                  sequence="100" action="custom_loan_act_window" groups="hr_payroll.group_hr_payroll_manager"/>

    </data>
</odoo>